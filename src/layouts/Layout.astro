---
import '../styles/globals.css';
import SEO from '../components/common/SEO.astro';
import { Header } from '../components/layout/Header';
import { Footer } from '../components/layout/Footer';

export interface Props {
  /** Page title â€” passed directly to SEO component. */
  title: string;
  /** Meta description. Defaults to site-wide description if omitted. */
  description?: string;
  /** Open Graph image path or URL. Defaults to /og-image.png. */
  ogImage?: string;
  /** Open Graph type. Use 'article' for blog/CMS pages. */
  ogType?: 'website' | 'article';
  /** Canonical URL. Defaults to site root if omitted. */
  canonicalUrl?: string;
  /** Block search indexing (404, thank-you pages, etc). */
  noIndex?: boolean;
  /** Set false to hide the header (e.g. landing pages). */
  showHeader?: boolean;
}

const {
  title,
  description = 'Principal Frontend Engineer & UI/UX Director specializing in enterprise design systems, accessibility, and frontend architecture.',
  ogImage,
  ogType,
  canonicalUrl,
  noIndex,
  showHeader = true,
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO: title, description, canonical, Open Graph, Twitter -->
    <SEO
      title={title}
      description={description}
      ogImage={ogImage}
      ogType={ogType}
      canonicalUrl={canonicalUrl}
      noIndex={noIndex}
    />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Fonts: DM Serif Display + DM Sans (Material Icons loaded from npm, not CDN) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=DM+Serif+Display:ital@0;1&display=swap"
      rel="stylesheet"
    />

    <!-- Theme: read localStorage / system pref before first paint (prevents FOUC) -->
    <script is:inline>
      const getThemePreference = () => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
      };
      document.documentElement.classList.toggle('dark', getThemePreference() === 'dark');
    </script>
  </head>

  <body class="min-h-screen bg-background text-foreground font-sans antialiased">
    {showHeader && <Header client:load />}
    <main id="main-content">
      <slot />
    </main>
    <Footer />
  </body>
</html>
