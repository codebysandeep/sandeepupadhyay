---
/**
 * Design System — Internal Reference Page
 *
 * Purpose  : Single source of truth for colors, typography, spacing, borders,
 *            shadows, icons, and UI component patterns used on sandeepupadhyay.com.
 * Audience : Internal / developer reference only.
 * SEO      : noIndex — excluded from search engines.
 * A11y     : WCAG 2.1 AA — landmarks, heading hierarchy, focus management,
 *            aria-labelledby on every section, aria-hidden on decorative icons,
 *            explicit for/id on all form pairs, 44px min touch targets.
 */
import Layout from '../layouts/Layout.astro';

/* ── Data ─────────────────────────────────────────────────── */

const orangeScale = [
  { shade: '50',  hex: '#fff7f5' },
  { shade: '100', hex: '#feede8' },
  { shade: '200', hex: '#fcd8cf' },
  { shade: '300', hex: '#f8b9a7' },
  { shade: '400', hex: '#f59b7d' },
  { shade: '500', hex: '#f17c52' },
  { shade: '600', hex: '#EB5E28', label: 'Brand' },
  { shade: '700', hex: '#c3461e' },
  { shade: '800', hex: '#a03818' },
  { shade: '900', hex: '#7d2a12' },
  { shade: '950', hex: '#5a1f0d' },
];

const stoneScale = [
  { shade: '100', hex: '#fafaf9' },
  { shade: '200', hex: '#f5f5f4' },
  { shade: '300', hex: '#e7e5e4' },
  { shade: '400', hex: '#d6d3d1' },
  { shade: '500', hex: '#a8a29e' },
  { shade: '600', hex: '#78716c' },
  { shade: '700', hex: '#57534e' },
  { shade: '800', hex: '#44403c' },
  { shade: '900', hex: '#292524' },
  { shade: '950', hex: '#1c1917' },
];

const spacingScale = [
  { name: '1',  px: '4px',   w: 'w-1'  },
  { name: '2',  px: '8px',   w: 'w-2'  },
  { name: '3',  px: '12px',  w: 'w-3'  },
  { name: '4',  px: '16px',  w: 'w-4'  },
  { name: '5',  px: '20px',  w: 'w-5'  },
  { name: '6',  px: '24px',  w: 'w-6'  },
  { name: '8',  px: '32px',  w: 'w-8'  },
  { name: '10', px: '40px',  w: 'w-10' },
  { name: '12', px: '48px',  w: 'w-12' },
  { name: '16', px: '64px',  w: 'w-16' },
  { name: '20', px: '80px',  w: 'w-20' },
  { name: '24', px: '96px',  w: 'w-24' },
  { name: '32', px: '128px', w: 'w-32' },
  { name: '40', px: '160px', w: 'w-40' },
  { name: '48', px: '192px', w: 'w-48' },
  { name: '64', px: '256px', w: 'w-64' },
];

const radii = [
  { name: 'rounded-sm',   val: '0.25rem / 4px',  cls: 'rounded-sm'   },
  { name: 'rounded',      val: '0.25rem / 4px',   cls: 'rounded'      },
  { name: 'rounded-md',   val: '0.375rem / 6px',  cls: 'rounded-md'   },
  { name: 'rounded-lg',   val: '0.5rem / 8px',    cls: 'rounded-lg'   },
  { name: 'rounded-xl',   val: '0.75rem / 12px',  cls: 'rounded-xl'   },
  { name: 'rounded-2xl',  val: '1rem / 16px',     cls: 'rounded-2xl'  },
  { name: 'rounded-3xl',  val: '1.5rem / 24px',   cls: 'rounded-3xl'  },
  { name: 'rounded-full', val: '9999px',           cls: 'rounded-full' },
];

const sampleIcons = [
  'home', 'person', 'mail', 'menu', 'close', 'search',
  'arrow_forward', 'arrow_back', 'check', 'add', 'edit', 'delete',
  'star', 'favorite', 'share', 'download', 'upload', 'settings',
  'light_mode', 'dark_mode', 'code', 'design_services', 'palette', 'brush',
];

const toc = [
  { id: 'colors',     label: 'Colors'     },
  { id: 'typography', label: 'Typography' },
  { id: 'spacing',    label: 'Spacing'    },
  { id: 'borders',    label: 'Borders'    },
  { id: 'shadows',    label: 'Shadows'    },
  { id: 'icons',      label: 'Icons'      },
  { id: 'components', label: 'Components' },
];
---

<Layout
  title="Design System | Sandeep Upadhyay"
  description="Internal design system reference — colors, typography, spacing, borders, icons and UI components for sandeepupadhyay.com."
  noIndex={true}
>

  <!-- ── Skip to main content (a11y: WCAG 2.4.1) ─────────── -->
  <a
    href="#ds-main"
    class="sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:z-[100] focus:px-4 focus:py-2 focus:bg-orange-600 focus:text-white focus:rounded-lg focus:font-semibold focus:shadow-lg"
  >
    Skip to content
  </a>

  <div class="container-page py-8 lg:py-12">

    <!-- ── Page Header ──────────────────────────────────────── -->
    <header class="mb-8 pb-8 border-b border-border" role="banner">
      <div class="flex items-center gap-3 mb-3">
        <span
          class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-orange-100 dark:bg-orange-950/40 text-orange-700 dark:text-orange-400 uppercase tracking-wider"
          aria-label="Page type: Internal reference"
        >
          Internal Reference
        </span>
      </div>
      <h1 class="display-2 mb-3">Design System</h1>
      <p class="body-p max-w-2xl">
        Single source of truth for colors, typography, spacing, borders, icons,
        and UI components used across <strong>sandeepupadhyay.com</strong>.
        All patterns follow <strong>WCAG 2.1 AA</strong> accessibility standards.
      </p>
    </header>

    <!-- ── Mobile / Tablet TOC — horizontal pill scroll ─────── -->
    <nav
      aria-label="Design system sections"
      class="lg:hidden mb-8 -mx-4 sm:-mx-6"
    >
      <div class="flex gap-2 overflow-x-auto px-4 sm:px-6 pb-2 scrollbar-none">
        {toc.map(item => (
          <a
            href={`#${item.id}`}
            class="shrink-0 min-h-[44px] inline-flex items-center px-4 py-2 rounded-full border border-border bg-background body-small font-semibold text-stone-600 dark:text-stone-400 hover:text-orange-600 dark:hover:text-orange-400 hover:border-orange-400 transition-colors whitespace-nowrap focus:outline-none focus-visible:ring-2 focus-visible:ring-orange-600"
          >
            {item.label}
          </a>
        ))}
      </div>
    </nav>

    <!-- ── Two-column grid: sidebar + content ───────────────── -->
    <div class="lg:grid lg:grid-cols-[220px_1fr] lg:gap-16 lg:items-start">

      <!-- ── Sticky Sidebar (desktop only) ────────────────── -->
      <aside
        class="hidden lg:block sticky top-24 self-start"
        aria-label="Design system navigation"
      >
        <p class="display-6 text-stone-500 uppercase tracking-wider mb-4" aria-hidden="true">
          Contents
        </p>
        <nav aria-label="Design system sections">
          <ul class="space-y-0.5" role="list">
            {toc.map(item => (
              <li>
                <a
                  href={`#${item.id}`}
                  class="flex items-center gap-2 px-3 py-2.5 rounded-lg body-medium text-stone-600 dark:text-stone-400 hover:text-orange-600 dark:hover:text-orange-400 hover:bg-secondary transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-orange-600 focus-visible:ring-inset min-h-[44px]"
                >
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </nav>

        <div class="mt-8 p-3 rounded-lg bg-secondary border border-border" role="note">
          <p class="body-small">
            Use the <strong>sun/moon</strong> icon in the header to preview
            light and dark modes.
          </p>
        </div>
      </aside>

      <!-- ══════════════════════════════════════════════════════
           MAIN CONTENT
      ══════════════════════════════════════════════════════ -->
      <main id="ds-main" class="space-y-20 min-w-0" tabindex="-1">

        <!-- ════════════════════════════════════════
             1. COLORS
        ════════════════════════════════════════ -->
        <section id="colors" aria-labelledby="heading-colors">
          <h2 id="heading-colors" class="display-3 mb-2">Colors</h2>
          <p class="body-p mb-10">
            Brand orange as primary, stone for neutrals. Semantic tokens
            abstract the raw scale — use them in components for automatic
            light/dark switching.
          </p>

          <!-- 1a. Semantic Tokens -->
          <div class="mb-12">
            <h3 id="heading-semantic-tokens" class="display-6 text-stone-500 uppercase tracking-wider mb-2">
              Semantic Tokens
            </h3>
            <p class="body-medium mb-5">
              Always prefer <code class="bg-secondary px-1.5 py-0.5 rounded text-sm">border-border</code>,
              <code class="bg-secondary px-1.5 py-0.5 rounded text-sm">bg-background</code>,
              <code class="bg-secondary px-1.5 py-0.5 rounded text-sm">text-foreground</code>
              over raw stone values — they respond to the active theme automatically.
            </p>
            <div class="grid sm:grid-cols-2 gap-3">
              {[
                { token: 'background',  cssVar: '--color-bg',            light: '#ffffff',  dark: '#1c1917', desc: 'Page & component backgrounds'     },
                { token: 'secondary',   cssVar: '--color-bg-subtle',      light: '#fafaf9',  dark: '#292524', desc: 'Subtle surfaces — cards, inputs'  },
                { token: 'foreground',  cssVar: '--color-text',           light: '#1c1917',  dark: '#f5f5f4', desc: 'Primary text'                     },
                { token: 'muted',       cssVar: '--color-text-secondary', light: '#57534e',  dark: '#e7e5e4', desc: 'Secondary / muted text'           },
                { token: 'border',      cssVar: '--color-border',         light: '#d6d3d1',  dark: '#78716c', desc: 'Dividers and input borders'       },
                { token: 'primary',     cssVar: '--color-primary',        light: '#7d2a12',  dark: '#EB5E28', desc: 'Primary action color'             },
                { token: 'accent',      cssVar: '--color-accent',         light: '#EB5E28',  dark: '#EB5E28', desc: 'Brand highlight / icon accent'    },
                { token: 'ring',        cssVar: '--color-border-focus',   light: '#EB5E28',  dark: '#f17c52', desc: 'Focus ring — used in focus-ring'  },
              ].map(t => (
                <div class="flex items-center gap-4 p-4 border border-border rounded-xl bg-background">
                  <div class="flex gap-1.5 shrink-0" aria-hidden="true">
                    <div
                      class="w-9 h-9 rounded-lg border border-stone-300 dark:border-stone-600"
                      style={`background:${t.light}`}
                      title={`Light mode: ${t.light}`}
                    ></div>
                    <div
                      class="w-9 h-9 rounded-lg border border-stone-600"
                      style={`background:${t.dark}`}
                      title={`Dark mode: ${t.dark}`}
                    ></div>
                  </div>
                  <div class="min-w-0">
                    <p class="body-medium font-semibold leading-tight">
                      <code class="text-orange-600 dark:text-orange-400">{t.token}</code>
                    </p>
                    <p class="body-small">{t.cssVar}</p>
                    <p class="body-small text-stone-400 truncate">{t.desc}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <!-- 1b. Orange Scale -->
          <div class="mb-12">
            <h3 class="display-6 text-stone-500 uppercase tracking-wider mb-5">
              Orange — Brand Primary
            </h3>
            <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-3">
              {orangeScale.map(c => (
                <div class="rounded-xl overflow-hidden border border-stone-300 dark:border-stone-600">
                  <div
                    class="h-14 sm:h-16"
                    style={`background:${c.hex}`}
                    role="img"
                    aria-label={`orange-${c.shade}: ${c.hex}`}
                  ></div>
                  <div class="px-3 py-2 bg-background">
                    <div class="flex items-center justify-between gap-1 flex-wrap">
                      <span class="body-small font-semibold text-foreground">orange-{c.shade}</span>
                      {c.label && (
                        <span class="text-xs px-1.5 py-0.5 rounded bg-orange-100 dark:bg-orange-950/40 text-orange-700 dark:text-orange-400 font-semibold">
                          {c.label}
                        </span>
                      )}
                    </div>
                    <span class="body-small font-mono text-stone-500">{c.hex}</span>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <!-- 1c. Stone Scale -->
          <div class="mb-12">
            <h3 class="display-6 text-stone-500 uppercase tracking-wider mb-5">
              Stone — Neutral
            </h3>
            <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-3">
              {stoneScale.map(c => (
                <div class="rounded-xl overflow-hidden border border-stone-300 dark:border-stone-600">
                  <div
                    class="h-14 sm:h-16 border-b border-stone-200 dark:border-stone-700"
                    style={`background:${c.hex}`}
                    role="img"
                    aria-label={`stone-${c.shade}: ${c.hex}`}
                  ></div>
                  <div class="px-3 py-2 bg-background">
                    <span class="body-small font-semibold text-foreground block">stone-{c.shade}</span>
                    <span class="body-small font-mono text-stone-500">{c.hex}</span>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <!-- 1d. Status Colors -->
          <div>
            <h3 class="display-6 text-stone-500 uppercase tracking-wider mb-5">
              Status
            </h3>
            <div class="grid grid-cols-2 lg:grid-cols-4 gap-3">
              <div class="rounded-xl overflow-hidden border border-stone-300 dark:border-stone-600">
                <div class="h-14 sm:h-16 flex items-center justify-center bg-success" role="img" aria-label="Success: #059669">
                  <span class="font-semibold text-white">Success</span>
                </div>
                <div class="px-3 py-2 bg-background">
                  <span class="body-small font-mono text-stone-500 block">#059669</span>
                  <span class="body-small">Confirmations, completed states</span>
                </div>
              </div>
              <div class="rounded-xl overflow-hidden border border-stone-300 dark:border-stone-600">
                <div class="h-14 sm:h-16 flex items-center justify-center bg-warning" role="img" aria-label="Warning: #ca8a04">
                  <span class="font-semibold text-white">Warning</span>
                </div>
                <div class="px-3 py-2 bg-background">
                  <span class="body-small font-mono text-stone-500 block">#ca8a04</span>
                  <span class="body-small">Cautions, advisory messages</span>
                </div>
              </div>
              <div class="rounded-xl overflow-hidden border border-stone-300 dark:border-stone-600">
                <div class="h-14 sm:h-16 flex items-center justify-center bg-error" role="img" aria-label="Error: #dc2626">
                  <span class="font-semibold text-white">Error</span>
                </div>
                <div class="px-3 py-2 bg-background">
                  <span class="body-small font-mono text-stone-500 block">#dc2626</span>
                  <span class="body-small">Failures, destructive actions</span>
                </div>
              </div>
              <div class="rounded-xl overflow-hidden border border-stone-300 dark:border-stone-600">
                <div class="h-14 sm:h-16 flex items-center justify-center bg-info" role="img" aria-label="Info: #0284c7">
                  <span class="font-semibold text-white">Info</span>
                </div>
                <div class="px-3 py-2 bg-background">
                  <span class="body-small font-mono text-stone-500 block">#0284c7</span>
                  <span class="body-small">Neutral information, tips</span>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- ════════════════════════════════════════
             2. TYPOGRAPHY
        ════════════════════════════════════════ -->
        <section id="typography" aria-labelledby="heading-typography">
          <h2 id="heading-typography" class="display-3 mb-2">Typography</h2>
          <p class="body-p mb-10">
            Two typefaces: <strong>DM Serif Display</strong> (decorative, weight 400) for
            <code class="bg-secondary px-1.5 py-0.5 rounded text-sm">.title</code> only.
            <strong>DM Sans</strong> (variable, 300–700) for everything else.
            All sizes use <code class="bg-secondary px-1.5 py-0.5 rounded text-sm">rem</code>
            — respects user browser font-size preference (WCAG 1.4.4).
          </p>

          <!-- 2a. Title & Subtitle -->
          <div class="mb-10">
            <h3 class="display-6 text-stone-500 uppercase tracking-wider mb-5">Title & Subtitle</h3>
            <div class="space-y-3">
              <div class="p-4 sm:p-6 border border-border rounded-xl bg-background overflow-hidden">
                <div class="flex items-start justify-between gap-4 mb-3 flex-wrap">
                  <code class="text-sm bg-orange-100 dark:bg-orange-950/40 text-orange-700 dark:text-orange-400 px-2 py-1 rounded">.title</code>
                  <span class="body-small text-stone-400">DM Serif Display · 4.5rem desktop · w400</span>
                </div>
                <p class="title">Drive Profit. Mitigate Risk.</p>
              </div>
              <div class="p-4 sm:p-6 border border-border rounded-xl bg-background overflow-hidden">
                <div class="flex items-start justify-between gap-4 mb-3 flex-wrap">
                  <code class="text-sm bg-orange-100 dark:bg-orange-950/40 text-orange-700 dark:text-orange-400 px-2 py-1 rounded">.subtitle</code>
                  <span class="body-small text-stone-400">DM Sans · 2rem desktop · w300</span>
                </div>
                <p class="subtitle">Leading enterprise-scale digital transformation</p>
              </div>
            </div>
          </div>

          <!-- 2b. Heading / Display Scale -->
          <div class="mb-10">
            <h3 class="display-6 text-stone-500 uppercase tracking-wider mb-2">Heading & Display Scale</h3>
            <p class="body-medium mb-5">
              <code class="bg-secondary px-1.5 py-0.5 rounded text-sm">.heading-N</code> and
              <code class="bg-secondary px-1.5 py-0.5 rounded text-sm">.display-N</code> render
              identically. Use <code class="bg-secondary px-1.5 py-0.5 rounded text-sm">.heading-N</code>
              on semantic <code class="bg-secondary px-1.5 py-0.5 rounded text-sm">&lt;h1&gt;–&lt;h6&gt;</code>
              for SEO and screen readers; <code class="bg-secondary px-1.5 py-0.5 rounded text-sm">.display-N</code>
              on any element for decorative use.
            </p>
            <div class="space-y-2">
              {[
                { cls: 'display-1', size: '~65px desktop', preview: 'Display 1 — Enterprise Scale'       },
                { cls: 'display-2', size: '48px desktop',  preview: 'Display 2 — Design Systems'         },
                { cls: 'display-3', size: '32px desktop',  preview: 'Display 3 — Frontend Architecture'  },
                { cls: 'display-4', size: '24px',          preview: 'Display 4 — Accessibility First'    },
                { cls: 'display-5', size: '18px',          preview: 'Display 5 — Principal Engineer'     },
                { cls: 'display-6', size: '16px',          preview: 'Display 6 — Section Label'          },
              ].map(h => (
                <div class="p-3 sm:p-4 border border-border rounded-xl bg-background">
                  <div class="flex items-start sm:items-baseline justify-between gap-3 flex-wrap sm:flex-nowrap">
                    <div class="flex items-baseline gap-3 min-w-0 w-full sm:w-auto">
                      <code class="shrink-0 text-xs bg-orange-100 dark:bg-orange-950/40 text-orange-700 dark:text-orange-400 px-2 py-1 rounded">.{h.cls}</code>
                      <span class={h.cls + ' truncate min-w-0'}>{h.preview}</span>
                    </div>
                    <span class="body-small text-stone-400 shrink-0">DM Sans · {h.size} · w700</span>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <!-- 2c. Body Text -->
          <div class="mb-10">
            <h3 class="display-6 text-stone-500 uppercase tracking-wider mb-5">Body Text</h3>
            <div class="space-y-3">
              {[
                { cls: 'body-p',      size: '18px', w: '400', sample: 'Default paragraph. Used for all general content throughout the site. Line height 1.6 for comfortable reading at length.' },
                { cls: 'body-medium', size: '16px', w: '400', sample: 'Secondary content, card descriptions, supporting text, and form labels.'                                                  },
                { cls: 'body-small',  size: '14px', w: '400', sample: 'Captions, metadata, timestamps, labels, fine print, and table cells.'                                                    },
                { cls: 'text-button', size: '18px', w: '700', sample: 'Button label text — DM Sans bold, tight line-height.'                                                                    },
              ].map(b => (
                <div class="p-4 border border-border rounded-xl bg-background">
                  <div class="flex items-start justify-between gap-4 mb-2 flex-wrap">
                    <code class="text-xs bg-orange-100 dark:bg-orange-950/40 text-orange-700 dark:text-orange-400 px-2 py-1 rounded">.{b.cls}</code>
                    <span class="body-small text-stone-400">DM Sans · {b.size} · w{b.w}</span>
                  </div>
                  <p class={b.cls}>{b.sample}</p>
                </div>
              ))}
            </div>
          </div>

          <!-- 2d. Font Families -->
          <div>
            <h3 class="display-6 text-stone-500 uppercase tracking-wider mb-5">Font Families</h3>
            <div class="grid sm:grid-cols-2 gap-4">
              <div class="p-5 border border-border rounded-xl bg-background">
                <code class="text-xs bg-orange-100 dark:bg-orange-950/40 text-orange-700 dark:text-orange-400 px-2 py-1 rounded mb-3 inline-block">font-display</code>
                <p class="font-display text-2xl sm:text-3xl leading-tight mb-2">DM Serif Display</p>
                <p class="body-small break-words">Aa Bb Cc Dd Ee Ff Gg Hh Ii<br/>Jj Kk Ll Mm Nn Oo Pp Qq Rr<br/>Ss Tt Uu Vv Ww Xx Yy Zz</p>
              </div>
              <div class="p-5 border border-border rounded-xl bg-background">
                <code class="text-xs bg-orange-100 dark:bg-orange-950/40 text-orange-700 dark:text-orange-400 px-2 py-1 rounded mb-3 inline-block">font-sans</code>
                <p class="font-sans text-2xl sm:text-3xl font-medium leading-tight mb-2">DM Sans</p>
                <p class="body-small break-words">Aa Bb Cc Dd Ee Ff Gg Hh Ii<br/>Jj Kk Ll Mm Nn Oo Pp Qq Rr<br/>Ss Tt Uu Vv Ww Xx Yy Zz · 0–9</p>
              </div>
            </div>
          </div>
        </section>

        <!-- ════════════════════════════════════════
             3. SPACING
        ════════════════════════════════════════ -->
        <section id="spacing" aria-labelledby="heading-spacing">
          <h2 id="heading-spacing" class="display-3 mb-2">Spacing</h2>
          <p class="body-p mb-10">
            Base unit is <strong>4px</strong>. All spacing uses Tailwind's default scale.
          </p>

          <!-- Visual scale -->
          <div class="mb-10">
            <h3 class="display-6 text-stone-500 uppercase tracking-wider mb-5">Scale</h3>
            <div class="border border-border rounded-xl bg-background overflow-x-auto" role="region" aria-label="Spacing scale">
              <div class="p-4 sm:p-6 space-y-3 min-w-[320px]">
                {spacingScale.map(s => (
                  <div class="flex items-center gap-3 sm:gap-4">
                    <span class="body-small font-mono w-7 text-right shrink-0 text-stone-400">{s.name}</span>
                    <span class="body-small font-mono w-12 shrink-0 text-stone-500">{s.px}</span>
                    <div
                      class={`h-4 sm:h-5 bg-orange-400 dark:bg-orange-500 rounded shrink-0 ${s.w}`}
                      aria-label={`spacing-${s.name}: ${s.px}`}
                    ></div>
                  </div>
                ))}
              </div>
            </div>
